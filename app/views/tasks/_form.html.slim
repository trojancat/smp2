= simple_form_for [@project, @task], role: 'form' do |f|
  = f.input :title, label: 'Наименование'
  = f.input :description, label: 'Описание', input_html: { rows: 10 }
  = f.input :status, label: 'Статус', include_blank: false
  = f.association :owner, label: 'Исполнитель', include_blank: false
  = link_to 'Отмена', project_tasks_path(@project), class: 'btn'
  = f.button :submit, value: 'Сохранить', class: 'btn btn-primary'
