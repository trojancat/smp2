h1 Проекты
.row
  .col-lg-offset-11
    = link_to 'Новый проект', new_project_path, class: 'btn btn-success'
.row
  table.table.table-condensed
    thead
      tr
        th Наименование
        th Задачи
        th Совещания
        th Проект-менеджер
        th Статус
        th Создан
        th &nbsp;
    tbody
      - @projects.each do |p|
        tr
          td = link_to p.title, project_path(p)
          td = link_to '[ ' + p.tasks.count.to_s + ' ]', project_tasks_path(p)
          td = link_to '[ ' + p.meetings.count.to_s + ' ]', project_meetings_path(p)
          td = p.owner.name
          td = p.status
          td = p.created_at
          td.span2
            =link_to "Изменить", edit_project_path(p)
            br
            =link_to "Удалить", project_path(p), method: :delete, data: { confirm: 'Уверены?' }

.row
  = will_paginate @projects, renderer: BootstrapPagination::Rails